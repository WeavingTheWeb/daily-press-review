<ul class="nav">
    {% if is_granted("ROLE_SUPER_ADMIN") %}
    <li{% if active_menu_item == 'dashboard' %} class="active"{% endif %}>
        <a href="{{ path('weaving_the_web_dashboard_show_documents') }}">Dashboard</a>
    </li>
    {% endif %}
    {% if is_granted("ROLE_USER") %}
    <li{% if active_menu_item == 'github_repositories' %} class="active"{% endif %}>
        <a href="{{ path('weaving_the_web_dashboard_show_repositories') }}">Github Repositories</a>
    </li>
    {% endif %}
</ul>
<ul class="nav pull-right">
    <li class="nav">
        {# authentication status #}
        {% spaceless %}
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <p class="navbar-text">
                <a href="{{ path('weaving_the_web_user_show_settings')  }}">
                    {{ app.user.username }}
                </a>
            </p>
        {% endif %}
        {% endspaceless %}
    </li>
    <li class="nav">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <a class="nav" href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
        {% else %}
            {% block navigation_login %}
            <a class="nav" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {%  endblock navigation_login %}
        {% endif %}
    </li>
</ul>