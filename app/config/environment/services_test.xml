<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="weaving_the_web.search_provider.user_status"
                 class="%weaving_the_web.api.search_provider.user_status.class%"
                 parent="fos_elastica.provider.prototype.orm">
            <tag name="fos_elastica.provider" index="twitter_test" type="user_status" />
            <argument index="0" type="service" id="fos_elastica.object_persister.twitter_test.user_status" />
            <argument index="1" type="string">%weaving_the_web.api.user_status%</argument>
            <argument index="2" type="collection">
                <argument key="query_builder_method" type="string">createRemainingUserStatusQueryBuilder</argument>
            </argument>
        </service>
    </services>
</container>

