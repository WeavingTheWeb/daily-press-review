parameters:
    app_version: 0.1

    api_facebook_host_port:         %api.facebook.protocol%%api.facebook.host_port%
    api_twitter_host_port:          %api.twitter.protocol%%api.twitter.host_port%

    api_twitter_consumer_key:       %api.twitter.consumer_key%
    api_twitter_consumer_secret:    %api.twitter.consumer_secret%
    api_twitter_callback_url:       %api.twitter.callback_url%

    api_wtw_repositories_items_per_page:    30
    api_wtw_repositories_user_name:         adama
    api_wtw_repositories_password:          ## FILL ME ##

    assetic_node:               %assetic.node%
    assetic_node_module:        %assetic.modules%

    database_charset:           UTF8
    database_driver:            pdo_mysql
    database_host:              localhost
    database_port:              3306
    database_name:              %mysql.database%
    database_user:              %mysql.user%
    database_password:          %mysql.password%
    database_dsn:               %database_driver%:host=%database_host%;port=%database_port%;dbname=%database_name%;charset=%database_charset%

    database_charset_test:      UTF8
    database_driver_test:       pdo_mysql
    database_host_test:         localhost
    database_port_test:         3308
    database_name_test:         %mysql.test_database%
