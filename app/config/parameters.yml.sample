    database_user_admin:        ## FILL ME ##
    database_password_admin:    %mysql.admin_password%

    endpoint_facebook_feed:     %api_facebook_host_port%/api/facebook/api.facebook.get.feed.php

    locale:                     en

    mailer_transport:           smtp
    mailer_host:                localhost
    mailer_user:                ~
    mailer_password:            ~

    secret:                     ## FILL ME ##

    test_database_memory:       false
    test_database_path:         %kernel.cache_dir%/wtw_dashboard.db
