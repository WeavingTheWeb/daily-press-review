#/bin/bash

DEBUG=0

SCREEN_NAME=$1
QUERY=$(cat <<SELECT_TOKEN
SELECT t.token
FROM weaving_access_token t, weaving_user_token ut, weaving_user u
WHERE ut.user_id = u.usr_id
AND ut.token_id = t.id
AND u.usr_twitter_username = '$SCREEN_NAME'
AND t.frozen_until IS NULL
LIMIT 1;
SELECT_TOKEN
)

if [ $DEBUG -eq 1 ]
then
    echo -e '[ executing query ]'"\n"$QUERY
fi

source /var/deploy/devobs/current/bin/export-config-parameters
mysql -s -N -D$SYMFONY__MYSQL__DATABASE -P$SYMFONY__MYSQL__PORT -h$SYMFONY__MYSQL__HOST \
-u$SYMFONY__MYSQL__USER \
-e "$QUERY";
