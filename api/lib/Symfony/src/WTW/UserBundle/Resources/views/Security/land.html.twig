{% extends "::base.html.twig" %}

{% trans_default_domain "security" %}

{% if not title is defined  %}
{% set title = 'title_homepage' %}
{% endif %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        "@WTWUserBundle/Resources/public/css/land.css"
        filter='cssrewrite'%}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block title %}{{ title|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div>
                <h1>{% block main_title %}{{ title|trans }}{% endblock main_title %}</h1>
            </div>

            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block confirmed_registration %}{% endblock %}

            {% block login_form %}{% endblock %}

            {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% block registration_form %}{% endblock %}
            {% endif %}
        </div>
    <div>
{% endblock %}
