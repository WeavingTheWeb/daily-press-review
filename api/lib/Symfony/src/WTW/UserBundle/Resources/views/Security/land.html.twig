{% extends "::base.html.twig" %}

{% trans_default_domain "security" %}

{% if not title is defined  %}
{% set title = 'title_homepage' %}
{% endif %}

{% block stylesheets %}
    {{ parent() }}
    {% include "WTWUserBundle:Registration:stylesheets.html.twig" %}
{% endblock %}

{% block title %}{{ title|trans }}{% endblock %}

{# Hide login link on landing page #}
{% block navigation_login %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="main-title">
                <h1>{% block main_title %}{{ title|trans }}{% endblock main_title %}</h1>
            </div>

            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block confirmed_registration %}{% endblock %}

            {% block login_form %}
                {% embed 'WTWUserBundle:Security:login_form_standalone.html.twig' %}{% endembed %}
            {% endblock %}

            {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% block registration_form %}{% endblock %}
            {% endif %}
        </div>
    <div>
{% endblock %}
