<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="wtw.user.listener.unauthorized_exception.class">WTW\UserBundle\EventListener\UnauthorizedExceptionListener</parameter>
    </parameters>

    <services>
        <service id="kernel.listener.unauthorized_exception" class="%wtw.user.listener.unauthorized_exception.class%">
            <tag name="kernel.event_listener" event="kernel.exception" />
        </service>
    </services>
</container>