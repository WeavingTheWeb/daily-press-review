<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="wtw.user.security_controller.class">WTW\UserBundle\Controller\SecurityController</parameter>
    </parameters>

    <services>
        <service id="wtw.user.security_controller" class="%wtw.user.security_controller.class%">
            <call method="setTemplating">
                <argument type="service" id="templating" />
            </call>
        </service>
    </services>
</container>