<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="weaving_the_web_mapping.closure_loader.class">WeavingTheWeb\Bundle\MappingBundle\Loader\ClosureLoader</parameter>
        <parameter key="weaving_the_web_mapping.mapping_factory.class">WeavingTheWeb\Bundle\MappingBundle\Factory\MappingFactory</parameter>
        <parameter key="weaving_the_web_mapping.mapping_configurator.class">WeavingTheWeb\Bundle\MappingBundle\Configurator\MappingConfigurator</parameter>
        <parameter key="weaving_the_web_mapping.mapping.class">WeavingTheWeb\Bundle\MappingBundle\Mapping</parameter>
        <parameter key="weaving_the_web_mapping.save_email_headers_command.class">WeavingTheWeb\Bundle\MappingBundle\Command\SaveEmailHeadersCommand</parameter>
        <parameter key="weaving_the_web_mapping.parser.email.class">WeavingTheWeb\Bundle\MappingBundle\Parser\EmailParser</parameter>
        <parameter key="weaving_the_web_mapping.analyzer.email_headers.class">WeavingTheWeb\Bundle\MappingBundle\Analyzer\EmailHeadersAnalyzer</parameter>
    </parameters>

    <services>
        <service id="weaving_the_web_mapping.closure_loader" class="%weaving_the_web_mapping.closure_loader.class%" />
        <service id="weaving_the_web_mapping.mapping_configurator" class="%weaving_the_web_mapping.mapping_configurator.class%">
            <call method="addLoader">
                <argument>closure</argument>
                <argument type="service" id="weaving_the_web_mapping.closure_loader" />
            </call>
        </service>
        <service id="weaving_the_web_mapping.mapping_factory" class="%weaving_the_web_mapping.mapping_factory.class%">
            <call method="setMappingClass">
                <argument>%weaving_the_web_mapping.mapping.class%</argument>
            </call>
            <configurator service="weaving_the_web_mapping.mapping_configurator" method="configure" />
        </service>
        <service id="weaving_the_web_mapping.mapping" class="%weaving_the_web_mapping.mapping.class%"
            factory-service="weaving_the_web_mapping.mapping_factory" factory-method="get">
        </service>
        <service id="weaving_the_web_mapping.parser.email" class="%weaving_the_web_mapping.parser.email.class%">
        </service>
        <service id="weaving_the_web_mapping.analyzer.email_headers" class="%weaving_the_web_mapping.analyzer.email_headers.class%">
            <property name="entityManager" type="service" id="doctrine.orm.entity_manager" />
            <property name="parser" type="service" id="weaving_the_web_mapping.parser.email" />
            <property name="logger" type="service" id="logger" />
        </service>
    </services>
</container>
