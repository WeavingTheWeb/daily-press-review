
<h2>{% block main_title %}{{ title }}{% endblock main_title %}</h2>

<div class="row-fluid">
    <div class="span7">
        {{ form_start(form) }}
        {{ form_row(form.keywords) }}
        {{ form_end(form) }}
    </div>

    {% if matches is defined %}
    {% for match in matches %}
    <div class="span12">
        <div class="span2">
            <img src="{{ match.userAvatar}}" height="30px" width="30px" /><br />
            <a href="http://twitter.com/{{ match.screenName}}">@{{ match.screenName}}</a>
        </div>
        <div class="span10">{{ match.text  }}</div>
    </div>
    {% endfor %}
    {% endif %}
</div>