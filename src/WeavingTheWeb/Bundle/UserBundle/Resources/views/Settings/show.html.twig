{% trans_default_domain "user" %}

{% extends "::base.html.twig" %}

{% set title = 'title_settings'|trans %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="span11">
        <div class="offset1">
            <div class="row-fluid">
                <h1>{{ title }}</h1>
            </div>
            <div class="row-fluid">
                {% if form_errors(form) %}
                <div class="offset1 label label-important">{{ form_errors(form) }}</div>
                {% endif %}
                <div class="span5">
                    <form action="{{ path("weaving_the_web_user_save_settings") }}"
                          id="login"
                          method="post">
                        <div class="row-fluid">
                            {{ form_row(form.username) }}
                        </div>

                        <div class="row-fluid">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="row-fluid">
                            {{ form_row(form.password) }}
                        </div>

                        <div class="row-fluid">
                            {{ form_row(form.password_again) }}
                        </div>

                        <div class="row-fluid">
                            {{ form_row(form.twitter_username) }}
                        </div>

                        <div class="row-fluid">
                            {{ form_row(form.firstName) }}
                        </div>

                        <div class="row-fluid">
                            {{ form_row(form.lastName) }}
                        </div>

                        <div class="row-fluid">
                            {{ form_row(form.url) }}
                        </div>

                        <div class="row-fluid">
                            {{ form_widget(form.disabled) }}
                            {{ form_label(form.disabled, 'label_disabled'|trans, { 'label_attr': { 'class': 'label' }}) }}
                        </div>

                        <div class="row-fluid">
                            {{ form_rest(form) }}
                        </div>

                        <div class="row-fluid">
                            {{ form_row(form.save) }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}

{% javascripts
    '@WTWDashboardBundle/Resources/public/js/dashboard.js'
    output='js/compiled/dashboard.js' %}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{% block stylesheets %}
{{ parent() }}

{% stylesheets
    '@WTWDashboardBundle/Resources/public/css/dashboard.css'
    output='css/compiled/dashboard.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}