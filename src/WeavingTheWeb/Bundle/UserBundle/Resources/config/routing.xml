<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="weaving_the_web_user_show_settings" pattern="/settings">
        <default key="_controller">weaving_the_web_user.controller.settings:showAction</default>
    </route>
    <route id="weaving_the_web_user_save_settings" pattern="/save-settings">
        <default key="_controller">weaving_the_web_user.controller.settings:saveAction</default>
    </route>
    <route id="weaving_the_web_user_connect_to_twitter" pattern="/connect-to-twitter">
        <default key="_controller">weaving_the_web_user.controller.settings:connectToTwitterAction</default>
    </route>
    <route id="weaving_the_web_user_save_token" pattern="/save-token">
        <default key="_controller">weaving_the_web_user.controller.settings:saveTokenAction</default>
    </route>
</routes>
