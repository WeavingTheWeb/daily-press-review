{% extends "::base.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div ng-view></div>
        </div>
    <div>
    <script type="text/javascript">
        partials = "{{ asset('bundles/wtwdashboard/wtw/partials/') }}";
    </script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
        '@WTWDashboardBundle/Resources/public/components/angular/angular.min.js'
        '@WTWDashboardBundle/Resources/public/wtw/js/app.js'
        '@WTWDashboardBundle/Resources/public/wtw/js/services.js'
        '@WTWDashboardBundle/Resources/public/wtw/js/controllers.js'
        '@WTWDashboardBundle/Resources/public/wtw/js/filters.js'
        '@WTWDashboardBundle/Resources/public/wtw/js/directives.js'
        output='js/compiled/main_angular.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}